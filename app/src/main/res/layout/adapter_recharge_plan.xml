<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/DP3"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="5dp">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_stroke_insufficient_coin_activity">

        <TextView
            android:id="@+id/coint_count"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/plan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coint_count"
            android:fontFamily="@font/lato_medium"
            android:paddingTop="2dp"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coint_count"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/lato_medium"
            android:paddingTop="2dp"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/price"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coint_count"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center"
            android:padding="@dimen/DP2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/SP16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:background="@drawable/free_days_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_free_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="Free Gift"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_vipPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_free_card"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="@dimen/DP10"
                android:singleLine="true"
                android:text="Free 0 Days VIP"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>